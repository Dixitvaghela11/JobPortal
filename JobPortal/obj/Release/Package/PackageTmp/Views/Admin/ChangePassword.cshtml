
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="d-flex justify-content-center mt-4">
    <div class="col-md-6 ">
        <h2>ChangePassword</h2>
        <form action="@Url.Action("ChangePassword","Admin")" id="fr" method="post" onsubmit="return validateChangePassword()">
            <div class="form-group mt-2">
                <label for="Password">Old password</label>
                <input type="password" name="oldPassword" id="oldPassword" onblur="validateOldPass(this)" class="form-control" placeholder="Old password">
                <span id="error-oldpassword" class="error-msg"></span>
            </div>
            <div class="form-group mt-2">
                <label for="Password">New password</label>
                <input type="password" name="newPassword" id="Password" class="form-control" placeholder="New password" onkeyup="validateCpass(this)" onfocusout="validatePass(this)">
                <span id="error-password" class="error-msg"></span>
            </div>
            <div class="form-group mt-2">
                <label for="ConfirmPassword">Confirm password</label>
                <input type="password" name="cpassword" id="ConfirmPassword" placeholder="Confirm password" class="form-control" onfocusout="validateCpass(this)">
                <span id="error-cpassword" class="error-msg"></span>
            </div>
            <div class="form-group">
                <center>
                    <button type="submit" value="Confirm" class="btn-17">
                        <span class="text-container">
                            <span class="text">Confirm</span>
                        </span>
                    </button>
                </center>
            </div>
        </form>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/MyScripts/main.js"></script>
