@model List<JobPortal.Models.ContactMessage>
@{
    ViewBag.Title = "ContactMessages";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Registration</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        .btn-reg {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .error-msg {
            color: red;
        }
    </style>
</head>
<body>
<div class="d-flex justify-content-center mt-5">
    <div class="col-md-10">
        <div class="card p-4" style="border: none; transform: translateY(0);">
            <div class="row">
                <div class="col-md-8">
                    <h3>Admin Registration</h3>
                    <form action="add_admin.php" method="post" onsubmit="return validateAdminForm()">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label for="Name" class="control-label">Full name</label>
                                <input type="text" name="Name" id="Name" class="form-control" placeholder="Full name" onblur="validateName(this)" />
                                <span id="error-Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Email" class="control-label">Email</label>
                                <input type="email" name="Email" id="Email" class="form-control" placeholder="Email" onblur="validateEmail(this)" />
                                <span id="error-email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="ContactPhone" class="control-label">Contact number</label>
                                <input type="text" name="PhoneNumber" id="ContactPhone" class="form-control" placeholder="Phone number" onblur="validatePhone(this)" />
                                <span id="error-phone" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-2">
                                <label for="username">Username</label>
                                <input type="text" name="Username" id="username" placeholder="Username" class="form-control" oninput="validateUsername(this.value)">
                                <span id="error-username" class="error-msg"></span>
                            </div>
                            <div class="form-group mt-2">
                                <label for="Password">Password</label>
                                <input type="password" name="Password" id="Password" class="form-control" placeholder="Password" onkeyup="validateCpass(this)" onfocusout="validatePass(this)">
                                <span id="error-password" class="error-msg"></span>
                            </div>
                            <div class="form-group mt-2">
                                <label for="ConfirmPassword">Confirm password</label>
                                <input type="password" name="cpassword" id="ConfirmPassword" placeholder="Confirm password" class="form-control" onfocusout="validateCpass(this)">
                                <span id="error-cpassword" class="error-msg"></span>
                            </div>
                            <div class="form-group">
                                <div class="mt-3">
                                    <input type="submit" value="Register" class="btn-reg" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-4">
                    <img src="Content/Static/homePageJP.png" class="post-vac" />
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="Scripts/MyScripts/main.js"></script>
</body>
</html>