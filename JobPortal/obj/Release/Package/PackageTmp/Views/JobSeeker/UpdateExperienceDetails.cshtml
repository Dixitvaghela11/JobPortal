@model JobPortal.Models.ExperienceDetails
@{
    ViewBag.Title = "UpdateExperienceDetails";
    Layout = "~/Views/Shared/JobSeekerLayout.cshtml";
}
<link href="~/Content/select2.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<div class="d-flex justify-content-center mt-5 ">
    <div class="col-md-6">
        <form action="@Url.Action("UpdateExperienceDetails", "JobSeeker")" method="post" onsubmit="return ValidateExperienceForm()">
            <div class="card p-3" style="border: none;transform: translateY(0);" id="experienceContainer">
                <center><h3>Update Experience Details</h3></center>
                <input type="hidden" name="ExperienceId" value="@Model.ExperienceId" />
                <div class="form-group mt-2">
                    <label for="companyName">Company Name:</label>
                    <input type="text" id="companyName" value="@Model.CompanyName" name="CompanyName" class="form-control" onblur="validateCompanyName(this)">
                    <span id="error-companyName" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label for="jobTitle">Job Title:</label>
                    <input type="text" id="jobTitle" value="@Model.JobTitle" name="JobTitle" class="form-control" onblur="validateJobTitle(this)">
                    <span id="error-jobTitle" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label for="startDate">Start Date:</label>
                    <input type="date" id="startDate" value="@Model.Start_Date.ToString("yyyy-MM-dd")" name="StartDate" class="form-control" onblur="validateStartDate(this)">
                    <span id="error-startDate" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label for="endDate">End Date:</label>
                    <input type="date" id="endDate" name="EndDate" value="@Model.End_Date.ToString("yyyy-MM-dd")" class="form-control" onblur="validateEndDate(this)">
                    <span id="error-endDate" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label for="description">Description:</label>
                    <textarea id="description" name="Description" class="form-control" onblur="validateDescription(this)">@Model.Description</textarea>
                    <span id="error-description" class="text-danger"></span>
                </div>
                <center>
                    <input type="submit" value="Update" class="btn-reg mt-2">
                </center>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/Scripts/jquery-3.7.1.min.js")
    @Scripts.Render("~/Scripts/MyScripts/select2.min.js")
}
<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<script src="~/Scripts/MyScripts/select2.min.js"></script>
<script src="~/Scripts/MyScripts/main.js"></script>
<script>
    $(document).ready(function () {
        $("#companyName").select2({
            placeholder: "Select company",
            allowClear: true,
            width: '100%'
        });
    });
</script>